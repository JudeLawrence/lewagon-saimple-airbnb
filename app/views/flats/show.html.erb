<div class="show-banner" style="background-image: url(<%= @flat.img_url %>)">

</div>

<div class="container margin-top-negative">

  <div class="show-layout">

    <div class="left-column">

      <div class="show-flat-card title-card">
        <h1><%= @flat.name %></h1>
        <h2><%= @flat.address %></h2>
      </div>

      <div class="show-flat-card info-card">
        <h2>A bit more about this flat...</h2>
        <p><%= @flat.description %></p>
      </div>

    </div>

    <div class="rught-column">

      <div class="show-flat-card booking-card">
        <h3>Book this place</h3>
      </div>

      <div class="show-flat-card details-card">
        <h3>Details</h3>
      </div>

      <div class="show-flat-card share-links-card">
        <span>share</span>
      </div>

    </div>
  </div>

</div>



